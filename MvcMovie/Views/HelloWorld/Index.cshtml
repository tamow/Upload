@{
    ViewData["Title"] = "Movie List";
}
@section Head {
    <link href="~/css/fileinput/fileinput.css" media="all" rel="stylesheet" type="text/css"/>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="~/js/fileinput/fileinput.js" type="text/javascript"></script>
    <script src="~/js/fileinput/ja.js" type="text/javascript"></script>
}

<h3>ファイルインポート</h3>
<br>

<label>ファイルタイプ</label>
<br>

<form asp-action="Upload" method="post" enctype="multipart/form-data">

  <div class="btn-group btn-group-toggle" data-toggle="buttons" style="margin-bottom: 20px;">
    <label class="btn btn-default active">
      <input type="radio" name="options" id="option1" autocomplete="off" checked>GMO
    </label>
    <label class="btn btn-default">
      <input type="radio" name="options" id="option2" autocomplete="off">ヤマト
    </label>
    <label class="btn btn-default">
      <input type="radio" name="options" id="option3" autocomplete="off">EC-WMS
    </label>
  </div>

<!--
  <div class="form-group">
      <button class="btn btn-primary">Upload</button>
      <button class="btn btn-default" type="reset">Cancel</button>
  </div>
-->
  <div class="form-group">
      <div class="file-loading">
          <input id="file-ja" class="file" name="files" type="file" multiple>
      </div>
  </div>
  </form>

<script>
    $("#file-ja").fileinput({
        language: "ja",
        showCaption: false,
        hideThumbnailContent: true
    });
</script>